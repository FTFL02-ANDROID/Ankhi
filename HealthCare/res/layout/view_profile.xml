<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/backgroung">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroung"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" 
        android:layout_margin="20dp"
         
        android:background="#CEF6F5">
    
    <ImageView
        android:id="@+id/imageViewMy_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginRight="14dp"        
        android:contentDescription="@drawable/my"
        android:src="@drawable/my" />

        
    <TextView
        android:id="@+id/textMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/My_Profile"        
        android:textSize="20sp"/>
    
    
</LinearLayout>

    <ScrollView 
      android:id="@+id/scrollView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#A9E2F3"
      android:layout_margin="10dp"
      android:layout_gravity="center">
      
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/name"
            android:src="@drawable/name" />

	    <EditText
	        android:id="@+id/viewName"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.54"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Name" />

	 </LinearLayout>
	 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagefNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/fname"
            android:src="@drawable/fname" />

	    <EditText
	        android:id="@+id/viewfName"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.54"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Fname" />

	 </LinearLayout>
	 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageMnameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/mname"
            android:src="@drawable/mname" />

	    <EditText
	        android:id="@+id/viewMname"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.54"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Mname" />

	 </LinearLayout>
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
 
	    <ImageView
	        android:id="@+id/age"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:contentDescription="@drawable/age"
	        android:src="@drawable/age" />


	    <EditText
	        android:id="@+id/viewAge"
	        android:layout_width="0dp"
	    	 android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/age" />
	 </LinearLayout>
	 
      
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    	    
	    <ImageView
        android:id="@+id/imageViewBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:contentDescription="@drawable/blood"
        android:src="@drawable/blood" />


	    <EditText
	        android:id="@+id/viewBloodGroup"
	        android:layout_width="0dp"
	    	android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/blood_group" />
	 </LinearLayout>
	 
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageEyeColorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/eye"
            android:src="@drawable/eye" />

	    <EditText
	        android:id="@+id/viewEyeColor"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.54"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/EyeColor" />

	 </LinearLayout>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    	    
	    <ImageView
        android:id="@+id/imageViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:contentDescription="@drawable/weight"
        android:src="@drawable/weight" />


	    <EditText
	        android:id="@+id/viewWeight"
	        android:inputType="numberSigned"
	        android:layout_width="0dp"
	    	android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Weight" />
	 </LinearLayout>
	 
                     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    	    
	    <ImageView
        android:id="@+id/imageViewheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:contentDescription="@drawable/height"
        android:src="@drawable/height" />

	    <EditText
	        android:id="@+id/viewHeight"
	        android:inputType="number"
	        android:layout_width="0dp"
	    	android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Height" />
	 </LinearLayout>
	 
     
                          
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    	    
	    <ImageView
        android:id="@+id/imageDobView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@drawable/dob"
        android:src="@drawable/dob" />


	    <EditText
	        android:id="@+id/viewDOB"
	        android:inputType="date"
	        android:layout_width="0dp"
	    	android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Date_Of_Birth" />
	 </LinearLayout>
	 
                               
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    	    
	    <ImageView
        android:id="@+id/imageViewSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@drawable/sp"
        android:src="@drawable/sp" />


	    <EditText
	        android:id="@+id/viewSpComment"
	        android:inputType="text"
	        android:layout_width="0dp"
	    	android:layout_weight="0.65"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_marginLeft="5dp"
	        android:hint="@string/Specified_Problem" />
	 </LinearLayout>
        
    </LinearLayout>
     </ScrollView>
     
 <Button
     android:id="@+id/update"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="5"
     android:text="@string/update"
     android:drawableLeft="@drawable/update"    
     android:layout_gravity="center"    
     android:layout_marginTop="10dp"
     android:layout_marginBottom="20dp"
     android:background="@drawable/rounded_blue"
     android:textColor="@android:color/holo_blue_dark"/>


   </LinearLayout>
   </ScrollView>
 

   




